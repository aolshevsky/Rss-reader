<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsCardView"
    app:cardElevation="5dp"
    app:cardCornerRadius="6dp"
    cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:background="?attr/background_2">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_2" >

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/newsImageView"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@color/city_lights"
            android:src="@drawable/profile_icon"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp">

            <TextView
                android:id="@+id/newsTitleTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Алеша продал почку или две..."
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="?attr/header_txt_color"/>

            <TextView
                android:id="@+id/newsDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/date"
                android:textColor="?attr/textcolor"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="21.09.2018"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/newsDescriptionTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:text="Алеша продал почку или две больше информации в статье Алеша продалпоч почку или две больше информации... статье"
                android:maxLines="3"
                android:textColor="?attr/textcolor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
