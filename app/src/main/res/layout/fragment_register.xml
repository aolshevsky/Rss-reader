<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?attr/backgroundcolor"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reg_avatarImgView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/userphoto" />

            <EditText
                android:id="@+id/reg_name_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="?attr/textcolor" />

            <EditText
                android:id="@+id/reg_surname_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Surname"
                android:inputType="textPersonName"
                android:textColor="?attr/textcolor" />

            <EditText
                android:id="@+id/reg_phone_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="?attr/textcolor" />

            <EditText
                android:id="@+id/reg_email_txtEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="?attr/textcolor" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="?attr/textcolor" />

            <EditText
                android:id="@+id/reg_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/reg_edittext_style"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="?attr/textcolor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/reg_btn_style"
                    android:text="Register"
                    android:textColor="?attr/button_txt" />

                <Button
                    android:id="@+id/switch_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register_btn"
                    android:layout_alignStart="@+id/register_btn"
                    android:layout_alignEnd="@+id/register_btn"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:text="Already register! Login Me."
                    android:textAllCaps="false"
                    android:textColor="?attr/textcolor" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>