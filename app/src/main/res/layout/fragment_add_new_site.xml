<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/lblUrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter RSS URL (https://news.tut.by/rss/index.rss)"
        android:padding="10sp"
        android:textStyle="bold"/>

    <EditText android:id="@+id/new_site_txtUrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/lblUrl"
        android:inputType="textUri"
        android:hint="Enter website url"
        android:singleLine="true"/>

    <Button android:id="@+id/new_site_btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_site_txtUrl"
        android:text="Submit"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <Button android:id="@+id/new_site_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/new_site_btnSubmit"
        android:layout_below="@id/new_site_txtUrl"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:windowSoftInputMode="stateVisible|adjustPan"/>

</RelativeLayout>